{
  "name": "cr-card",
  "version": "0.1.0",
  "description": "A complete and simple to use share menu.",
  "main": "cr-card.js",
  "module": "cr-card.js",
  "browser": "cr-card.js",
  "types": "cr-card.d.ts",
  "type": "module",
  "scripts": {
    "start": "run-p watch serve",
    "watch": "rollup -w -c rollup.config.ts",
    "serve": "es-dev-server --node-resolve --open --port 8080 --watch --app-index 'demo/index.html'",
    "build": "NODE_ENV=production rollup -c rollup.config.ts",
    "lint:src": "eslint --ext .ts 'src/**/*.{js,ts}'",
    "lint:test": "eslint --ext .ts 'test/**/*.{js,ts}' --config .eslintrc.test",
    "lint": "run-p lint:src lint:test",
    "format:src": "npm run lint:src -- --fix",
    "format:test": "npm run lint:test -- --fix",
    "format": "run-p format:src format:test",
    "prepublishOnly": "npm run build",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.9.0",
    "@open-wc/testing": "^2.5.9",
    "@open-wc/testing-karma": "^3.3.11",
    "@polymer/iron-demo-helpers": "^3.1.0",
    "@polymer/iron-flex-layout": "^3.0.1",
    "@polymer/paper-button": "^3.0.1",
    "@polymer/paper-input": "^3.2.1",
    "@polymer/paper-styles": "^3.0.1",
    "@polymer/paper-toggle-button": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "@webcomponents/webcomponentsjs": "^2.4.3",
    "es-dev-server": "^1.46.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "lit-html": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.2",
    "rollup": "^2.3.3",
    "rollup-plugin-filesize": "^6.2.1",
    "rollup-plugin-minify-html-literals": "^1.2.3",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "sinon": "^9.0.1",
    "typescript": "^3.8.3",
    "webpack-merge": "^4.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dabolus/cr-card.git"
  },
  "keywords": [
    "custom-element",
    "web-component",
    "cr-card",
    "web-share-api"
  ],
  "author": "Giorgio Garasto <giorgio@garasto.it>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Dabolus/cr-card/issues"
  },
  "homepage": "https://github.com/Dabolus/cr-card#readme",
  "files": [
    "LICENSE",
    "demo",
    "cr-card.d.ts",
    "cr-card.iife.js",
    "cr-card.iife.min.js",
    "cr-card.js",
    "cr-card.min.js",
    "cr-card-property.d.ts",
    "cr-card-property.iife.js",
    "cr-card-property.iife.min.js",
    "cr-card-property.js",
    "cr-card-property.min.js",
    "package.json",
    "README.md",
    "cr-card.d.ts",
    "cr-card-property.d.ts"
  ]
}
